// js/script-inventario.js

// Função para atualizar a lista de inventário na tela
function atualizarInventario(personagem) {
  const lista = document.getElementById("inventario-lista");
  if (!lista) return;

  // Limpa lista
  lista.innerHTML = "";

  // Adiciona cada item do inventário
  personagem.inventario.forEach((item, index) => {
    const li = document.createElement("li");
    li.textContent = item;

    // Botão para remover item
    const btnRemover = document.createElement("button");
    btnRemover.textContent = "Remover";
    btnRemover.style.marginLeft = "10px";
    btnRemover.onclick = () => {
      removerItem(personagem, index);
    };

    li.appendChild(btnRemover);
    lista.appendChild(li);
  });
}

// Função para adicionar item ao inventário do personagem e atualizar interface
function adicionarItemVisual(personagem, itemNome) {
  if (!itemNome) return;
  personagem.inventario.push(itemNome);
  atualizarInventario(personagem);
}

// Função para remover item do inventário
function removerItem(personagem, index) {
  personagem.inventario.splice(index, 1);
  atualizarInventario(personagem);
}

// Exemplo de uso com input e botão no HTML
document.addEventListener("DOMContentLoaded", () => {
  const btnAdicionar = document.getElementById("btn-adicionar-item");
  const inputItem = document.getElementById("input-item");

  if (btnAdicionar && inputItem) {
    btnAdicionar.addEventListener("click", () => {
      const nomeItem = inputItem.value.trim();
      if (nomeItem && window.heroi1) { // usa o personagem de exemplo
        adicionarItemVisual(window.heroi1, nomeItem);
        inputItem.value = "";
      }
    });
  }

  // Atualiza inventário inicial
  if (window.heroi1) atualizarInventario(window.heroi1);
});<body>
  <h1>Olimpo RPG</h1>

  <!-- Personagem -->
  <div id="personagem-info">
    <p>Nome: Zeus</p>
    <p>HP: 100</p>
    <p>PE: 50</p>
  </div>

  <!-- Inventário vai aparecer aqui -->
  <div id="inventario-container">
    <h3>Inventário</h3>
    <ul id="inventario-lista"></ul>
    <input type="text" id="input-item" placeholder="Novo item">
    <button id="btn-adicionar-item">Adicionar Item</button>
  </div>
</body>
