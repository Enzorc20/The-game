// Função para criar semideus escolhendo 2 habilidades
function criarSemideus(nome, deusPai) {
  const deus = classesDeuses[deusPai];
  if (!deus) return null;

  // Pega aleatoriamente 2 habilidades do deus
  let habilidadesEscolhidas = [];
  while (habilidadesEscolhidas.length < 2) {
    let h = deus.habilidades[Math.floor(Math.random() * deus.habilidades.length)];
    if (!habilidadesEscolhidas.includes(h)) habilidadesEscolhidas.push(h);
  }

  return {
    nome: nome,
    pai: deusPai,
    habilidades: habilidadesEscolhidas,
    bonus: deus.bonus,
    pv: 100 + (deus.bonus.pv || 0),
    pe: 50 + (deus.bonus.pe || 0),
    defesa: 20 + (deus.bonus.defesa || 0)
  };
}

// Exemplo de uso
const semideus1 = criarSemideus("Helios", "ZEUS");
console.log(semideus1);
